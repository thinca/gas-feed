{
  "compilerOptions": {
    "outDir": "./built",

    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5",
    "lib": ["es6"],

    "module": "CommonJS",
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
